@inject Microsoft.AspNetCore.Identity.UserManager<User> UserManager

@model AddDietViewModel

@{
    ViewBag.Title = "Add Diet";
}

@{
    var userId = UserManager.GetUserId(User);
    Model.UserDiets = new List<UserDiet> { new UserDiet { UserId = userId } };
}
<h1>Add Diet</h1>

<form asp-controller="Diet" asp-action="Create" method="post">
    <input type="hidden" asp-for="DietId" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Image URL</label>
        <input class="form-control" asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CaloriesIntake">Calories Intake</label>
        <input type="number" class="form-control" asp-for="CaloriesIntake" />
        <span asp-validation-for="CaloriesIntake" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="DietId" />

    <input type="hidden" asp-for="UserDiets[0].UserId" />

    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Create" asp-action="Create" asp-route-id="@Model.DietId" />
    </div>
</form>