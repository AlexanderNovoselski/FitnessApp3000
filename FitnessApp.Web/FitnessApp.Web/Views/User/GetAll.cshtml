@model PagedList.IPagedList<UserViewModel>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Height</th>
            <th>Weight</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.Age</td>
                <td>@user.Gender</td>
                <td>@user.Height</td>
                <td>@user.Weight</td>
                <td>
                    @if (user.Email != "admin@admin.com")
                    {
                        <button onclick="deleteUser('@user.Email')">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.PageCount > 1)
{
    <div class="text-center">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("GetAll", new { page = Model.PageNumber - 1, pageSize = Model.PageSize })">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("GetAll", new { page = i, pageSize = Model.PageSize })">@i</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("GetAll", new { page = Model.PageNumber + 1, pageSize = Model.PageSize })">Next</a>
                </li>
            }
        </ul>
    </div>
}

<script>
    function deleteUser(email) {
        if (confirm("Are you sure you want to delete this user?")) {
            fetch(`/User/Remove?email=${email}`, {
                method: 'POST' // or 'DELETE' depending on your server-side configuration
            })
                .then(response => {
                    if (response.ok) {
                        console.log('User deleted successfully');
                        // Remove the user from the UI
                        const userRow = document.querySelector(`tr[data-email="${email}"]`);
                        if (userRow) {
                            userRow.remove();
                        }
                    } else {
                        console.log('Error deleting user');
                        // Handle the error case if needed
                    }
                })
                .catch(error => {
                    console.log('Error:', error);
                    // Handle the error case if needed
                });
        }
    }
</script>