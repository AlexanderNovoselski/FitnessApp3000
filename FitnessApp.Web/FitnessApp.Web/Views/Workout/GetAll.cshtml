@model IEnumerable<WorkoutsResultModel>

@{
    ViewBag.Title = "All Workouts";
}

<h2 class="text-center">Here you can choose a workout plan to follow </h2>
<hr />

<div class="text-center row">
    @if (Model.Any())
    {
        @foreach (var workout in Model)
        {
            <div class="card col-4" style="width: 20rem; margin-bottom: 20px;">
                <div class="card-body">
                    <p hidden>Id: @workout.WorkoutId</p>
                    <h5 class="card-title mt-1">@workout.Name</h5>
                    <p class="mb-0">Description: @workout.Description</p>
                    <p class="mb-0">Calories Burned: @workout.CaloriesBurned</p>
                    <p class="mb-0">Duration: @workout.Duration</p>
  @*                  <p class="mb-0">User IDs: @string.Join(", ", workout.UserIds)</p>*@
                    <ul>
                        @foreach (var exerciseWorkout in workout.ExerciseWorkouts)
                        {
                            <li>
                                <strong>Exercise Name:</strong> @exerciseWorkout.ExerciseName<br />
                                <strong>Sets:</strong> @exerciseWorkout.Sets<br />
                                <strong>Reps:</strong> @exerciseWorkout.Reps
                            </li>
                        }
                    </ul>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <form class="input-group-sm mb-3" asp-controller="Workout" asp-action="AddToCollection" asp-route-id="@workout.WorkoutId">
                        <input type="submit" value="Add To Collection" class="btn btn-primary btn-sm w-100" />
                    </form>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="d-grid gap-2">
                            <form class="input-group-sm mb-3" asp-controller="Workout" asp-action="Edit" asp-route-id="@workout.WorkoutId">
                                <input type="submit" value="Edit" class="btn btn-warning btn-sm w-100" />
                            </form>
                            <form class="input-group-sm mb-3" asp-controller="Workout" asp-action="Remove" asp-route-id="@workout.WorkoutId">
                                <input type="submit" value="Remove" class="btn btn-danger btn-sm w-100" />
                            </form>
                            <form class="input-group-sm mb-3" asp-controller="Workout" asp-action="AddExercise" asp-route-id="@workout.WorkoutId">
                                <input type="submit" value="Add Exercise" class="btn btn-primary btn-sm w-100" />
                            </form>
                        </div>
                    }
                }
                
            </div>
        }
    }
    else
    {
        <p>No workouts available yet.</p>
    }
</div>